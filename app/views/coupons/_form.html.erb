<section class="content">
  <div class="box box-default">
    <div class="box-header with-border">
      <h3 class="box-title">Cupons de desconto</h3>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
      </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
      <%= form_for(coupon) do |f| %>
        <% if coupon.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(coupon.errors.count, "error") %> prohibited this coupon from being saved:</h2>

            <ul>
            <% coupon.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :logo, "Logo" %>
              <%= f.text_field :logo, class:'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :name, "Empresa" %>
              <%= f.text_field :name, class:'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :code, "CÃ³digo" %>
              <%= f.text_field :code, class:'form-control' %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :validity, "Validade do cupom" %>
              <%= f.text_field :validity, class:'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :discount, "Desconto em %" %>
              <%= f.text_field :discount, class:'form-control' %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit 'Salvar', :class => 'btn btn-primary btn-lg  pull-right m-left' %>
          <%= link_to 'Novo cupom', new_coupon_path, class: 'btn btn-lg btn-success pull-right m-left'  %>
        </div>
      <% end %>
    </div>
  </div>
</section>
