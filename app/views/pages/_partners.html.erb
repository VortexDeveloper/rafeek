<h2 style='margin-top: 1em;' class="title_padrao">Nossos parceiros</h2>
<div class="parceiros">
  <div class="parceiros-inner">
    <% partners.each do |partner| %>
    <div class="col-sm-6 col-md-4">
      <div class="parceiros_item">
        <%= link_to image_tag(partner.avatar.url), "http://#{partner.url}", target: '_blank' %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row be-partner">
    <%= link_to 'SEJA NOSSO PARCEIRO', '#', class: 'btn btn-primary', :'data-toggle' => "modal", :'data-target' => "#myModal" %>
  </div>

  <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">SEJA NOSSO PARCEIRO</h4>
        </div>
        <div class="modal-body" style='overflow: hidden;'>
          <%= form_tag send_partner_email_path, method: :post do %>
            <div class="form-group">
              <%= label_tag :name, 'Nome' %>
              <%= text_field_tag :name, nil,class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= label_tag :email, 'Email' %>
              <%= email_field_tag :email, nil,class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= label_tag :company, 'Empresa' %>
              <%= text_field_tag :company, nil, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= label_tag :cnpj, 'CNPJ' %>
              <%= text_field_tag :cnpj, nil, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= label_tag :site, 'Site' %>
              <%= text_field_tag :site, nil, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= label_tag :propousal, 'Proposta' %>
              <%= text_area_tag :propousal, nil, class: 'form-control', rows: 5 %>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
          <%= submit_tag 'Enviar Proposta', class: 'btn btn-primary' %>
        </div>
        <% end %>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
</div>

<script type="text/javascript">
  $(document).ready(function(){
    normal_height('.parceiros .parceiros_item')
  });
</script>
