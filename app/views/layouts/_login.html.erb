<button class="btn news_button login-btn" href="#" data-toggle="modal" data-target="#login-modal">
  <%= I18n.t('.devise.sessions.new.sign_in') %>
</button>
<%= link_to I18n.t('.devise.registrations.new.sign_up'), new_registration_path(resource_name), class: 'btn news_button login-btn green-bg' %><br />
<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="loginmodal-container">
            <%= form_for(resource, :as => resource_name, :url => session_path(:user)) do |f| %>
              <%= f.label 'Email' %>
              <%= f.text_field :email %>
              <%= f.label 'Senha' %>
              <%= f.password_field :password %>
              <%= f.submit 'Entrar', class: 'btn-login-facebook login-button  ' %>
              <%= render partial: 'devise/shared/links' %>
            <% end %>
        </div>
    </div>
</div>
