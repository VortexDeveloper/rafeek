<section class="content">
  <div class="box box-default">
    <div class="box-header with-border">
      <h3 class="box-title">Pacotes de pontos</h3>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
      </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
      <%= form_for(raffle) do |f| %>
        <% if raffle.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(raffle.errors.count, "error") %> prohibited this raffle from being saved:</h2>

            <ul>
            <% raffle.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :title, "Título" %>
              <%= f.text_field :title, class:'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :description, "Descrição" %>
              <%= f.text_field :description, class:'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :image, "Imagem" %>
              <%= f.text_field :image, class:'form-control' %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :points, "Quantidade de pontos" %>
              <%= f.text_field :points, class:'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :amount, "Quantidade" %>
              <%= f.text_field :amount, class:'form-control' %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit 'Salvar', :class => 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</section>
