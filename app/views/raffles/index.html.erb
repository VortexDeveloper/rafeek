<p id="notice"><%= notice %></p>

<section class="content-header">
  <h1>
    Rifas
  </h1>
</section>
<section class="content">
  <%= link_to 'Nova Rifa', new_raffle_path, class: 'btn btn-lg btn-success pull-right'  %>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
          <table id="example2" class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>Título</th>
                <th>Descrição</th>
                <th>Valor em pontos</th>
                <th>Quandtidade máxima de bilhetes</th>
                <th>Imagem</th>
                <th>Ações</th>
              </tr>
            </thead>

            <tbody>
              <% @raffles.each do |raffle| %>
                <tr>
                  <td><%= raffle.title %></td>
                  <td><%= raffle.description %></td>
                  <td><%= raffle.points %></td>
                  <td><%= raffle.amount %></td>
                  <td><%= raffle.image %></td>
                  <td>
                    <%= link_to 'Exibir', raffle, class: 'btn btn-info' %>
                    <%= link_to 'Editar', edit_raffle_path(raffle), class: 'btn btn-primary' %>
                    <%= link_to 'Deletar', raffle, method: :delete, data: { confirm: 'Deseja mesmo deletar essa rifa?' }, class: 'btn btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
<br>
